---
// src/components/Navbar.astro
---

<nav class="bg-white shadow-md sticky top-0 z-50 w-full">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="flex items-center" data-astro-prefetch="hover">
          <span class="text-2xl font-bold text-gray-900">NutriAnemia</span>
        </a>
      </div>

      <!-- Menú desktop -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <a
          href="/"
          class="px-3 py-2 text-sm font-medium text-gray-900 hover:text-primary-dark border-b-2 border-transparent hover:border-primary-dark transition-colors"
          data-astro-prefetch="hover"
        >
          Inicio
        </a>
        <a
          href="/recetas"
          class="px-3 py-2 text-sm font-medium text-gray-900 hover:text-primary-dark border-b-2 border-transparent hover:border-primary-dark transition-colors"
          data-astro-prefetch="hover"
        >
          Recetas
        </a>
        <a
          href="/recomendaciones"
          class="px-3 py-2 text-sm font-medium text-gray-900 hover:text-primary-dark border-b-2 border-transparent hover:border-primary-dark transition-colors"
          data-astro-prefetch="hover"
        >
          Recomendaciones
        </a>
        <a
          href="/importancia"
          class="px-3 py-2 text-sm font-medium text-gray-900 hover:text-primary-dark border-b-2 border-transparent hover:border-primary-dark transition-colors"
          data-astro-prefetch="hover"
        >
          Importancia
        </a>
      </div>

      <!-- Botón móvil -->
      <div class="md:hidden flex items-center">
        <button
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:text-gray-900 focus:outline-none"
          aria-label="Menú principal"
          aria-expanded="false"
        >
          <svg
            class="block h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            class="hidden h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú móvil -->
  <div class="hidden mobile-menu md:hidden bg-white shadow-lg">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a
        href="/"
        class="block px-3 py-2 rounded-md text-base font-medium text-white bg-primary-dark"
        data-astro-prefetch="hover"
      >
        Inicio
      </a>
      <a
        href="/recetas"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-primary-dark"
        data-astro-prefetch="hover"
      >
        Recetas
      </a>
      <a
        href="/recomendaciones"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-primary-dark"
        data-astro-prefetch="hover"
      >
        Recomendaciones
      </a>
      <a
        href="/importancia"
        class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-white hover:bg-primary-dark"
        data-astro-prefetch="hover"
      >
        Importancia
      </a>
    </div>
  </div>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.querySelector(".mobile-menu-button");
      const menu = document.querySelector(".mobile-menu");

      btn.addEventListener("click", () => {
        const isExpanded = btn.getAttribute("aria-expanded") === "true";
        btn.setAttribute("aria-expanded", !isExpanded);
        menu.classList.toggle("hidden");

        // Alternar iconos
        btn.querySelectorAll("svg").forEach((svg) => {
          svg.classList.toggle("block");
          svg.classList.toggle("hidden");
        });
      });

      // Cerrar menú al hacer clic en un enlace
      menu.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          menu.classList.add("hidden");
          btn.setAttribute("aria-expanded", "false");
          btn.querySelectorAll("svg").forEach((svg) => {
            svg.classList.add("block");
            svg.classList.remove("hidden");
          });
        });
      });
    });
  </script>
</nav>
