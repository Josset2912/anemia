      </div>
    </div>
  </div>

  <!-- Contenido principal -->
  <main class="max-w-4xl mx-auto px-4 py-6">
    <!-- Imagen principal -->
    <img
      src={receta.imagen}
      alt={receta.titulo}
      class="w-full h-64 object-cover rounded-lg shadow-lg mb-6"
      loading="lazy"
    />

    <!-- DescripciÃ³n -->
