---
// src/pages/recomendaciones.astro
import Layout from "../layout/Layout.astro";
---

<Layout title="Recomendaciones de Alimentación Saludable">
  <section class="py-12 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h1
        class="text-3xl font-bold sm:text-4xl bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-cyan-400"
      >
        Recomendaciones para la Alimentación Saludable
      </h1>
      {
        /*
      <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
        Guía práctica basada en las normas del Ministerio de Salud del Perú
      </p>
      
      */
      }
    </div>

    <!-- Pestañas modernas -->
    <div class="mb-8">
      <div class="flex space-x-1 bg-gray-100 p-1 rounded-full max-w-md mx-auto">
        <button
          id="tab-6meses"
          class="tab-button flex-1 py-3 px-6 font-medium text-sm rounded-full transition-all duration-300 bg-white shadow-md text-blue-600"
          onclick="openTab('6meses')"
        >
          <span class="flex items-center justify-center">
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </span>
        </button>

        <button
          id="tab-6a23meses"
          class="tab-button flex-1 py-3 px-6 font-medium text-sm rounded-full transition-all duration-300 text-gray-600 hover:text-gray-800"
          onclick="openTab('6a23meses')"
        >
          <span class="flex items-center justify-center">
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            6-23 meses
          </span>
        </button>
        
      </div>
    </div>

    <!-- Contenido de pestañas -->
    <div class="mt-6">
      <!-- Pestaña 1: Menor de 6 meses -->
      <div id="content-6meses" class="tab-content">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Tarjeta 1 -->
          <div class="group relative">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"
            >
            </div>
            <div
              class="relative bg-white rounded-lg p-6 h-full border border-gray-100 shadow-sm group-hover:shadow-md transition-all duration-300"
            >
              <div class="flex items-center mb-4">
                <div class="bg-blue-100 p-2 rounded-lg mr-4">
                  <svg
                    class="h-6 w-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900">
                  Lactancia exclusiva
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                Dale solo leche materna durante los primeros 6 meses de edad a
                libre demanda.
              </p>

              <div
                class="bg-blue-50/50 backdrop-blur-sm p-4 rounded-lg border border-blue-100"
              >
                <h4
                  class="text-sm font-semibold text-blue-700 uppercase tracking-wider mb-2"
                >
                  Beneficios clave
                </h4>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Ácidos grasos para desarrollo neurológico</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Nutrientes completos para crecimiento</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Tarjeta 2 -->
          <div class="group relative">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"
            >
            </div>
            <div
              class="relative bg-white rounded-lg p-6 h-full border border-gray-100 shadow-sm group-hover:shadow-md transition-all duration-300"
            >
              <div class="flex items-center mb-4">
                <div class="bg-blue-100 p-2 rounded-lg mr-4">
                  <svg
                    class="h-6 w-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900">
                  Importancia del calostro
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                Líquido amarillento rico en proteínas y vitamina A que se
                produce los primeros días.
              </p>

              <div
                class="bg-blue-50/50 backdrop-blur-sm p-4 rounded-lg border border-blue-100"
              >
                <h4
                  class="text-sm font-semibold text-blue-700 uppercase tracking-wider mb-2"
                >
                  Protección esencial
                </h4>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Refuerza defensas contra infecciones</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Primera "vacuna" biológica natural</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Ayuda a eliminar meconio</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Tarjeta 3 -->
          <div class="group relative">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"
            >
            </div>
            <div
              class="relative bg-white rounded-lg p-6 h-full border border-gray-100 shadow-sm group-hover:shadow-md transition-all duration-300"
            >
              <div class="flex items-center mb-4">
                <div class="bg-blue-100 p-2 rounded-lg mr-4">
                  <svg
                    class="h-6 w-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900">
                  Suplementación con hierro
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                A partir de los 4 meses de edad según indicación médica.
              </p>

              <div
                class="bg-blue-50/50 backdrop-blur-sm p-4 rounded-lg border border-blue-100"
              >
                <h4
                  class="text-sm font-semibold text-blue-700 uppercase tracking-wider mb-2"
                >
                  Por qué es vital
                </h4>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Previene la anemia infantil</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Esencial para desarrollo cognitivo</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-blue-500 mr-2">✓</span>
                    <span>Mejora el sistema inmunológico</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pestaña 2: 6 a 23 meses -->
      <div id="content-6a23meses" class="tab-content hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Tarjeta 1 -->
          <div class="group relative">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-green-500 to-emerald-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"
            >
            </div>
            <div
              class="relative bg-white rounded-lg p-6 h-full border border-gray-100 shadow-sm group-hover:shadow-md transition-all duration-300"
            >
              <div class="flex items-center mb-4">
                <div class="bg-green-100 p-2 rounded-lg mr-4">
                  <svg
                    class="h-6 w-6 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900">
                  Lactancia prolongada
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                Continúa con lactancia materna hasta los 2 años o más junto con
                alimentación complementaria.
              </p>

              <div
                class="bg-green-50/50 backdrop-blur-sm p-4 rounded-lg border border-green-100"
              >
                <h4
                  class="text-sm font-semibold text-green-700 uppercase tracking-wider mb-2"
                >
                  Beneficios comprobados
                </h4>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">✓</span>
                    <span>Mayor desarrollo intelectual duradero</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">✓</span>
                    <span>Protección contra enfermedades crónicas</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">✓</span>
                    <span>Menor riesgo de cáncer infantil</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Tarjeta 2 -->
          <div class="group relative">
            <div
              class="absolute -inset-1 bg-gradient-to-r from-green-500 to-emerald-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-300"
            >
            </div>
            <div
              class="relative bg-white rounded-lg p-6 h-full border border-gray-100 shadow-sm group-hover:shadow-md transition-all duration-300"
            >
              <div class="flex items-center mb-4">
                <div class="bg-green-100 p-2 rounded-lg mr-4">
                  <svg
                    class="h-6 w-6 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900">
                  Alimentos ricos en hierro
                </h3>
              </div>
              <p class="text-gray-600 mb-4">
                Introduce estos alimentos a partir de los 6 meses:
              </p>

              <div class="flex flex-wrap gap-2 mb-4">
                <span
                  class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full border border-green-200"
                  >Sangrecita</span
                >
                <span
                  class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full border border-green-200"
                  >Hígado</span
                >
                <span
                  class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full border border-green-200"
                  >Pescado</span
                >
                <span
                  class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full border border-green-200"
                  >Lentejas</span
                >
              </div>

              <div
                class="bg-green-50/50 backdrop-blur-sm p-4 rounded-lg border border-green-100"
              >
                <h4
                  class="text-sm font-semibold text-green-700 uppercase tracking-wider mb-2"
                >
                  Impacto positivo
                </h4>
                <ul class="space-y-2 text-sm text-gray-700">
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">✓</span>
                    <span>Previene la anemia en un 50%</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">✓</span>
                    <span>Mejora el desarrollo cerebral</span>
                  </li>
                  <li class="flex items-start">
                    <span class="text-green-500 mr-2">✓</span>
                    <span>Fortalece el sistema inmunológico</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script is:inline>
    // Función para cambiar entre pestañas
    function openTab(tabName) {
      // Ocultar todos los contenidos de pestañas
      document.querySelectorAll(".tab-content").forEach((content) => {
        content.classList.add("hidden");
      });

      // Mostrar el contenido de la pestaña seleccionada
      document.getElementById(`content-${tabName}`).classList.remove("hidden");

      // Actualizar estado activo de los botones
      document.querySelectorAll(".tab-button").forEach((button) => {
        button.classList.remove("bg-white", "shadow-md", "text-blue-600");
        button.classList.add("text-gray-600", "hover:text-gray-800");
      });

      // Marcar el botón activo
      const activeButton = document.getElementById(`tab-${tabName}`);
      activeButton.classList.remove("text-gray-600", "hover:text-gray-800");
      activeButton.classList.add("bg-white", "shadow-md", "text-blue-600");
    }
  </script>
</Layout>
